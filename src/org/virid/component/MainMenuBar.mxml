<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark"  
		 xmlns:mx="library://ns.adobe.com/flex/mx"
		 creationComplete="group1_creationCompleteHandler(event)"
		 width="100%" height="63" xmlns:smallComponents="org.virid.smallComponents.*">
	<fx:Script>
		<![CDATA[
			import org.syncon.Customizer.model.CustomEvent;
			import mx.events.FlexEvent;
			
			import spark.skins.spark.ButtonSkin;
			public static var ADD_TEXT:String='ADD_TEXT';
			public static var ADD_IMAGE:String='ADD_IMAGE';
			public static var REDO:String='REDO';
			public static var UNDO:String='UNDO';
			public static var EXPORTJSON:String='EXPORTJSON';
			protected function group1_creationCompleteHandler(event:FlexEvent):void
			{
				// TODO Auto-generated method stub
		
			}
			
			protected function swithModes_clickHandler(event:MouseEvent):void
			{
				this.parentDocument.currentState = (this.parentDocument.currentState == "engrave" )?"normal" : "engrave";
			}
			
			protected function onUndo(event:MouseEvent):void
			{
				this.dispatchEvent( new CustomEvent( UNDO ))
			}
			protected function onRedo(event:MouseEvent):void
			{
				this.dispatchEvent( new CustomEvent( REDO ))
			}
			
			protected function onSave(event:MouseEvent):void
			{
				// TODO Auto-generated method stub
				this.dispatchEvent( new Event(EXPORTJSON) );
			}
			
		]]>
	</fx:Script>
	
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	
	<s:Rect radiusX="10" radiusY="10" top="0" left="0" right="0" bottom="0">
		<s:fill >
			<s:SolidColor color="0xffffff" />
		</s:fill>
		<s:stroke>
			<s:SolidColorStroke color="0xe9e9e9"/>
		</s:stroke>
	</s:Rect>
	
	<s:HGroup gap="-4"
			  paddingBottom="5" paddingLeft="0" paddingRight="5" paddingTop="5">
		
		<smallComponents:MainMenuButton label="undo"   id="btnUndo" 
										icon="assets/images/undo.png" 
										click="onUndo(event)"
										buttonMode="true" useHandCursor="true" mouseChildren="false"/>
		<smallComponents:MainMenuButton label="redo"   id="btnRedo" 
										icon="assets/images/redo.png" 
										click="onRedo(event)"
										buttonMode="true" useHandCursor="true" mouseChildren="false"/>
		
		<smallComponents:MainMenuButton label="Background" visible="true" includeInLayout="true" 
										icon="assets/images/background.png"
										click="swithModes_clickHandler(event)"
										buttonMode="true" useHandCursor="true" mouseChildren="false"/>		
		<smallComponents:MainMenuButton icon="assets/images/location.png" visible="false" includeInLayout="false"
										label="Choose a Location"
										click="swithModes_clickHandler(event)"
										buttonMode="true" useHandCursor="true" mouseChildren="false"/>
		
		<smallComponents:MainMenuButton icon="assets/images/engrave.png"
										label="Text"
										click="swithModes_clickHandler(event)"
										buttonMode="true" useHandCursor="true" mouseChildren="false"/>
		<smallComponents:MainMenuButton icon="assets/images/preview.png"
										label="Preview" 
										buttonMode="true" useHandCursor="true" mouseChildren="false"/>
		<smallComponents:MainMenuButton icon="assets/images/save.png" 
										label="Save It" 
										click="onSave(event)"
										buttonMode="true" useHandCursor="true" mouseChildren="false"/>

	</s:HGroup>
	
</s:Group>
