<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark"  
		 xmlns:mx="library://ns.adobe.com/flex/mx"
		 creationComplete="group1_creationCompleteHandler(event)"
		 width="100%" height="63">
	<fx:Script>
		<![CDATA[
			import mx.events.FlexEvent;
			
			import spark.skins.spark.ButtonSkin;
			
			protected function group1_creationCompleteHandler(event:FlexEvent):void
			{
				// TODO Auto-generated method stub
		
			}
			
			protected function swithModes_clickHandler(event:MouseEvent):void
			{
				this.parentDocument.currentState = (this.parentDocument.currentState == "engrave" )?"normal" : "engrave";
			}
			
		]]>
	</fx:Script>
	
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	
	<s:Rect radiusX="10" radiusY="10" top="0" left="0" right="0" bottom="0">
		<s:fill >
			<s:SolidColor color="0xffffff" />
		</s:fill>
		<s:stroke>
			<s:SolidColorStroke color="0xe9e9e9"/>
		</s:stroke>
	</s:Rect>
	
	<s:HGroup gap="-4"
			  paddingBottom="5" paddingLeft="0" paddingRight="5" paddingTop="5">
		<s:Button label="undo" 
				  icon="org/virid/assets/images/undo.jpg" iconPlacement="top"
				  skinClass="org.virid.skins.MainMenuBtnSkin"
				  buttonMode="true" useHandCursor="true" mouseChildren="false"/>
		
		<s:Button label="Background" visible="false" includeInLayout="false"
				  icon="org/virid/assets/images/background.jpg" iconPlacement="top"
				  skinClass="org.virid.skins.MainMenuBtnSkin"
				  buttonMode="true" useHandCursor="true" mouseChildren="false"/>
		
		<s:Button label="Choose a Location" visible="true"
				  icon="org/virid/assets/images/location.jpg" iconPlacement="top"
				  skinClass="org.virid.skins.MainMenuBtnSkin"
				  click="swithModes_clickHandler(event)"
				  buttonMode="true" useHandCursor="true" mouseChildren="false"/>
		
		
		<s:Button label="Text" visible="false" includeInLayout="false"
				  icon="org/virid/assets/images/engrave.jpg" iconPlacement="top"
				  skinClass="org.virid.skins.MainMenuBtnSkin"
				  buttonMode="true" useHandCursor="true" mouseChildren="false"/>
		
		<s:Button label="Preview" 
				  icon="org/virid/assets/images/preview.jpg" iconPlacement="top"
				  skinClass="org.virid.skins.MainMenuBtnSkin"
				  buttonMode="true" useHandCursor="true" mouseChildren="false"/>
		
		<s:Button label="Save It" 
				  icon="org/virid/assets/images/star.jpg" iconPlacement="top"
				  skinClass="org.virid.skins.MainMenuBtnSkin"
				  buttonMode="true" useHandCursor="true" mouseChildren="false"/>
	</s:HGroup>
	
</s:Group>
